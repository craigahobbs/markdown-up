        objectNew( \
            'html', 'span', \
            'attr', objectNew('style', 'user-select: none;'), \
            'elem', objectNew('text', 'Hello') \
        ) \
    )
endfunction
unittestRunTest('testFormsLinkElements_nullUrl')
